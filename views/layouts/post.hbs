<html lang="en">
<head>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/post.css">
    <link rel="stylesheet" href="/css/comment.css">
    <link rel="stylesheet" href="/css/delete_post_dialogue.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="/js/jquery-3.6.0.min.js"></script>
    <title>Freedom Wall</title>
</head>
<body>
    {{> header}}
    {{> delete_post_dialogue}}
    {{> delete_comment_dialogue}}
    <div class="content">
        <div class="post" id="{{post._id}}">
            <div class="top">
                <div class="user-info">
                    <a href="#" ><img id="profile-pic" src="/images/pfp.jpg" alt="profile-pic"></a>
                    <p id="username">{{post.user.username}}</p>
                </div>
                <span id="date">{{formatDate post.datePosted}}</span>
                <div class="tag">
                    <span>{{post.tag}}</span>
                </div>
            </div>
            <h3 id="title">{{post.title}} </h3>
            <p id="description">
                {{{post.content}}}
            </p>
            <div class="action-icons">
                <div class="comment-icon">
                    <a href="#" id="comment-icon">
                    <svg id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="27" height="27" color="#00703C">
                        <defs><style>.cls-637642e7c3a86d32eae6f1b1-1{fill:none;stroke:currentColor;stroke-miterlimit:10;}</style></defs>
                        <path class="cls-637642e7c3a86d32eae6f1b1-1" d="M1.5,5.3v9.54a3.82,3.82,0,0,0,3.82,3.82H7.23v2.86L13,18.66h5.73a3.82,3.82,0,0,0,3.82-3.82V5.3a3.82,3.82,0,0,0-3.82-3.82H5.32A3.82,3.82,0,0,0,1.5,5.3Z">
                        </path>
                    </svg>
                    </a>
                    <p>Comment</p>
                </div>
                <div class="like">
                    <a href="#" id="like">
                        <svg id="like-icon" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="24" height="24" color="#00703C"><defs><style>.cls-637b715ef95e86b59c579e6f-1{fill: white;stroke:currentColor;stroke-miterlimit:10;}</style></defs><path class="cls-637b715ef95e86b59c579e6f-1" d="M.5,12H5.28l6.11-7.06A2,2,0,0,0,12,3.51a2,2,0,0,1,2-2,2.74,2.74,0,0,1,2,.8,2.79,2.79,0,0,1,.8,2c0,2-2.87,5.86-2.87,5.86h6A2.61,2.61,0,0,1,22.5,12.7a2.94,2.94,0,0,1-.05.51L20.89,21A1.91,1.91,0,0,1,19,22.52H11.25a9.13,9.13,0,0,1-4-.95h0a9.08,9.08,0,0,0-4.06-1H.5"></path></svg>
                    </a>
                    <span class="num" id="up-num">{{post.upVote}}</span>
                </div>
                <div class="dislike">
                    <a href="#" id="dislike">
                        <svg id="dislike-icon" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="24" height="24" color="#00703C"><defs><style>.cls-637b715ef95e86b59c579e6e-1{fill:white;stroke:currentColor;stroke-miterlimit:10;}</style></defs><path class="cls-637b715ef95e86b59c579e6e-1" d="M.5,12H5.28l6.11,7.06A2,2,0,0,1,12,20.49a2,2,0,0,0,2,2,2.74,2.74,0,0,0,2-.8,2.79,2.79,0,0,0,.8-1.95c0-2-2.87-5.86-2.87-5.86h6A2.61,2.61,0,0,0,22.5,11.3a2.94,2.94,0,0,0-.05-.51L20.89,3A1.91,1.91,0,0,0,19,1.48H11.25a9.13,9.13,0,0,0-4,1h0a9.08,9.08,0,0,1-4.06,1H.5"></path></svg>              
                    </a>
                    <span class="num" id="down-num">{{post.downVote}}</span>
                </div>
                {{#if (eq post.user.userId user._id)}}
                <div class="i-right">
                    <a href="/post/{{post.id}}/edit"><div class="edit-post">
                        <div id="edit-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" height="27" viewBox="0 -960 960 960" width="27">
                                <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z" fill="#00703E"/>
                            </svg>                        
                        </div> 
                        <p>Edit</p>
                    </div></a>
                    <div class="delete-post">
                        <div id="delete-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" height="27" viewBox="0 -960 960 960" width="27">
                                <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z" fill="#00703E"/>
                            </svg>                        
                        </div>
                        <p>Delete</p>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="comment-posts">
            <div class="add-comment-panel">
                <textarea id="comment-textarea" name="content" placeholder="Add a comment" row="auto" cols="auto"></textarea>
                <button id="add-comment-button">
                    Comment
                    <svg id="button-add-comment" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z" fill="#00703E"/>
                    </svg>
                </button>
            </div>
            <span id="line"></span>
            {{#each comment}}
                <div class="comment-post">
                    <div class="user-info">
                        <a href="/user/{{this.user.userId}}"><img id="profile-pic" src='/images/pfp.jpg' alt="profile-pic"></a>
                        <p id="username">{{this.user.username}}</p>
                    </div>
                    <p id="comment">{{this.content}}</p>
                    {{#if (eq this.user.userId ../user._id)}}
                        <div class="action-icons">
                                <a href="/post/{{../post.id}}/comment/{{this.id}}/edit"><div class="edit-comm">
                                    <div id="edit-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="27" viewBox="0 -960 960 960" width="27">
                                            <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z" fill="#00703E"/>
                                        </svg>                        
                                    </div>
                                    <p>Edit</p>
                                </div></a>
                                <div class="delete-comm">
                                    <a href="#" id="delete-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="27" viewBox="0 -960 960 960" width="27">
                                            <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z" fill="#00703E"/>
                                        </svg>                        
                                    </a>
                                    <p>Delete</p>
                                </div>
                        </div>
                    {{/if}}
                </div>
            {{/each}}        
    <script src="/js/script.js"></script>
</body>
</html>